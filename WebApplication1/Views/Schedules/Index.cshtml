@model EventSchduleViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>My Events</h2>

<table class="pure-table pure-table-horizontal">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.eventName)</th>
            <th>@Html.DisplayNameFor(model => model.coach)</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Events)
        {

            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Member.Name)</td>
                <td>
                    <a class="button-success pure-button" asp-controller="Events" asp-action="Details" asp-route-id="@item.EventId">View Event</a>
                    <a class="button-success pure-button" asp-controller="Schedules" asp-action="Details" asp-route-id="@item.EventId">View Members</a>
                </td>
            </tr>
        }
    </tbody>
</table>
