@model EventSchduleViewModel

@{
    ViewData["Title"] = "Details";
}

<h2 class="heading">Details</h2>

<h3 class="heading">Schedule</h3>

@if (Model.Members.Count == 0)
{
    <h4 class="heading">You have no members enrolled in this event</h4>
}
else
{
    <div class="card">
        <div class="container">
            <table class="pure-table pure-table-horizontal">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Members)</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Members)
                    {

                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
<div class="form-group">
    <a type="button" class="btn btn-secondary" asp-controller="Schedules" asp-action="Index">Back to List</a>
</div>
