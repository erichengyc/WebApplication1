@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASP .NET</title>

    <!--DO NOT DELETE THE LINE BELOW OR ELSE WEBSITE WILL NOT FUNCTION PROPERLY-->
