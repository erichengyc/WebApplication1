@model WebApplication1.Models.Member
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Edit";
}

<h2 class="heading">Edit</h2>

<h4 class="heading">Member</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <table>
                <tr>
                    <td>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </td>
                    <td>
                        <input type="hidden" asp-for="MemberId" />
                    </td>
                </tr>
                @if (Context.Session.GetString("RoleId") == "1")
                {
            <tr class="form-group">
                <td>
                    <label asp-for="Name" class="col-md-2 control-label"></label>
                </td>
                <td class="col-md-10">
                    <input asp-for="Name" class="form-control" />
                </td>
                <td>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </td>
            </tr>
            <tr class="form-group">
                <td>
                    <label asp-for="Nickname" class="col-md-2 control-label"></label>
                </td>
                <td class="col-md-10">
                    <input asp-for="Nickname" class="form-control" />
                </td>
                <td>
                    <span asp-validation-for="Nickname" class="text-danger"></span>
                </td>
            </tr>
            <tr class="form-group">
                <td>
                    <label asp-for="Email" class="col-md-2 control-label"></label>
                </td>
                <td class="col-md-10">
                    <input asp-for="Email" class="form-control" />
                </td>
                <td>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </td>
            </tr>
            <tr class="form-group">
                <td>
                    <label asp-for="Password" class="col-md-2 control-label"></label>
                </td>
                <td class="col-md-10">
                    <input asp-for="Password" class="form-control" />
                </td>
                <td>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </td>
            </tr>
            <tr class="form-group">
                <td>
                    <label asp-for="Dob" class="col-md-2 control-label"></label>
                </td>
                <td class="col-md-10">
                    <input asp-for="Dob" class="form-control" />
                </td>
                <td>
                    <span asp-validation-for="Dob" class="text-danger"></span>
                </td>
            </tr>
            <tr class="form-group">
                <td>
                    <label asp-for="Gender" class="col-md-2 control-label"></label>
                </td>
                <td class="col-md-10">
                    <input asp-for="Gender" class="form-control" />
                </td>
                <td>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </td>
            </tr>
            <tr class="form-group">
                <td>
                    <label asp-for="Biography" class="col-md-2 control-label"></label>
                </td>
                <td class="col-md-10">
                    <input asp-for="Biography" class="form-control" />
                </td>
                <td>
                    <span asp-validation-for="Biography" class="text-danger"></span>
                </td>
            </tr>
            <tr class="form-group">
                <td>
                    <label asp-for="RoleId" class="col-md-2 control-label"></label>
                </td>
                <td class="col-md-10">
                    <input asp-for="RoleId" class="form-control" />
                </td>
                <td>
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                </td>
            </tr>

                }
                else if (Context.Session.GetString("RoleId") == "2")
                {
            <tr>
                <td>
                    <input type="hidden" asp-for="Name" />
                </td>
            </tr>
            <tr>
                <td>
                    <input type="hidden" asp-for="Nickname" />
                </td>
            </tr>
            <tr>
                <td>
                    <input type="hidden" asp-for="Email" />
                </td>
            </tr>
            <tr>
                <td>
                    <input type="hidden" asp-for="Password" />
                </td>
            </tr>
            <tr>
                <td>
                    <input type="hidden" asp-for="Dob" />
                </td>
            </tr>
            <tr>
                <td>
                    <input type="hidden" asp-for="Gender" />
                </td>
            </tr>
            <tr>
                <td>
                    <input type="hidden" asp-for="RoleId" />
                </td>
            </tr>

                    <tr class="form-group">
                        <td>
                            <label asp-for="Biography" class="col-md-2 control-label"></label>
                        </td>
                    <tr class="col-md-10">
                        <td>
                            <input asp-for="Biography" class="form-control" />
                        </td>
                        <td>
                            <span asp-validation-for="Biography" class="text-danger"></span>
                        </td>
                    </tr>
                    </tr>
                }

                <tr class="form-group">
                    <td>
                        <input type="submit" value="Save" class="btn btn-default" />
                    </td>
                    <td>
                        <a asp-controller="Members" asp-action="Details" asp-route-id="@Context.Session.GetString("MemberId")">Back to account</a>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
