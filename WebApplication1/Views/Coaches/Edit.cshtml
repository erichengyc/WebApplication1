@model WebApplication1.Models.Member
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Edit";
}

<h2 class="heading">Edit</h2>

<h4 class="heading">Member</h4>
<hr />
<div class="row">
    <td class="col-md-4">
        <form asp-action="Edit">
            <table>
                <tr>
                    <td>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </td>
                    <td>
                        <input type="hidden" asp-for="MemberId" />
                    </td>
                </tr>
            @if (Context.Session.GetString("RoleId") == "1")
            {
                <tr class="form-group">
                    <td>
                        <label asp-for="Name" class="col-md-2 control-label"></label>
                    </td>
                    <td class="col-md-10">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </td>
                </tr>
                <tr class="form-group">
                    <td>
                    <label asp-for="Nickname" class="col-md-2 control-label"></label>
                    </td>
                    <td class="col-md-10">
                        <input asp-for="Nickname" class="form-control" />
                        <span asp-validation-for="Nickname" class="text-danger"></span>
                    </td>
                </tr>
                <tr class="form-group">
                    <td>
                        <label asp-for="Email" class="col-md-2 control-label"></label>
                    </td>
                    <td class="col-md-10">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </td>
                </tr>
                <tr class="form-group">
                    <td>
                        <label asp-for="Password" class="col-md-2 control-label"></label>
                    </td>
                    <td class="col-md-10">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </td>
                </tr>
                <tr class="form-group">
                    <td>
                        <label asp-for="Dob" class="col-md-2 control-label"></label>
                    </td>
                    <td class="col-md-10">
                        <input asp-for="Dob" class="form-control" />
                        <span asp-validation-for="Dob" class="text-danger"></span>
                    </td>
                </tr>
                <tr class="form-group">
                    <td>
                        <label asp-for="Gender" class="col-md-2 control-label"></label>
                    </td>
                    <td class="col-md-10">
                            <input asp-for="Gender" class="form-control" />
                            <span asp-validation-for="Gender" class="text-danger"></span>
                    </td>
                </tr>
                <tr class="form-group">
                    <td>
                        <label asp-for="Biography" class="col-md-2 control-label"></label>
                    </td>
                    <td class="col-md-10">
                        <input asp-for="Biography" class="form-control" />
                        <span asp-validation-for="Biography" class="text-danger"></span>
                    </td>
                </tr>
                <tr class="form-group">
                    <td>
                        <label asp-for="RoleId" class="col-md-2 control-label"></label>
                    </td>
                    <td class="col-md-10">
                        <input asp-for="RoleId" class="form-control" />
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </td>
                </tr>

            }

            <tr class="form-group">
                <td>
                    <input type="submit" class="btn btn-secondary" value="Save" />
                </td>
                <td>
                    <a type="button" class="btn btn-secondary" asp-action="Index">Back to List</a>
                </td>
            </tr>
            </table>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
