@model WebApplication1.Models.Member
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-controller="Home" asp-action="Login" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mx-sm-3 mb-2">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" placeholder="Please enter your Email."/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group mx-sm-3 mb-2">
        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
        <div class="col-md-10">
            <input asp-for="Password" class="form-control" placeholder="Please enter your Password."/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group mx-sm-3 mb-2">
        <div class="col-md-offset-2 col-md-10">
            <button onclick="location.href='/Home/Index';type=" submit" class="btn btn-outline-primary">Login</button>

        </div>
    </div>


</form>

