@model WebApplication1.Models.Member
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

<div class="banner">
    <h1 class="main-head">
        Home Page
    </h1>
</div>

<div class="information pure-g">
    @if (Context.Session.GetString("MemberId") != null)
    {
    }
    else
    {
            <div class="l-box">
                <h3 class="information-head">Profile</h3>


                <p>
                    <!-- Pop up for log in -->
                    <button onclick="document.getElementById('modal-wrapper').style.display='block'" class="button-secondary pure-button">Login Popup</button>

                    <div id="modal-wrapper" class="modal">

                        <form class="modal-content animate" asp-controller="Home" asp-action="Login" method="post">

                            <div class="imgcontainer">
                                <span onclick="document.getElementById('modal-wrapper').style.display='none'" class="close" title="Close PopUp">&times;</span>
                                <img src="~/images/User Image.png" alt="Image goes here" class="avatar">
                                <h1 style="text-align:center">AFTS Schedule Log In</h1>
                            </div>

                            <!-- Pop up user -->
                            <div class="container" asp-controller="Home" asp-action="Login" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Email" class="col-md-2 control-label"></label>
                                    <div class="col-md-10">
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Pop up password -->
                                <div class="form-group">
                                    <label asp-for="Password" class="col-md-2 control-label"></label>
                                    <div class="col-md-10">
                                        <input asp-for="Password" class="form-control" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-default">Login</button>
                                <input type="checkbox" style="margin:26px 30px;"> Remeasdadwember me
                                <a href="#" style="text-decoration:none; float:right; margin-right:34px; margin-top:26px;">Forgot Password ?</a>
                            </div>

                        </form>

                    </div>
                    <!-- Pop up for Log in -->
                    <!-- Pop up for Register -->
                    <button onclick="location.href='/Home/Register'" class="button-secondary pure-button">Register</button>

                    <!-- End of Pop up for Register -->

                </p>

            </div>
        <div class="pure-u-1 pure-u-md-1-2">
            <div class="l-box">
                <h3 class="information-head">Help</h3>
                <br />
                <p>
                    <li class="pure-menu-item"><i class="fa fa-search"></i></li>
                    <a href="#" class="pure-menu-link pure-menu-heading">Forgotten Username</a>

                    <li class="pure-menu-item"><i class="fa fa-shield-alt"></i></li>
                    <a href="#" class="pure-menu-link pure-menu-heading">Forgotten Password</a>
                </p>

            </div>
        </div>
    }

    <div class="information pure-g">
        <div class="pure-u-1 pure-u-md-1-2">
            <div class="l-box">
                <h3 class="information-head">Instructions</h3>
                <br />
                <ul>
                    <li>Use the above links to create an account and log in to your profile.</li>
                    <li>Once you create an account, you can log in and view your profile.</li>
                </ul>
            </div>
        </div>
        <div class="pure-u-1 pure-u-md-1-2">
            <div class="l-box">
                <h3 class="information-head">Payment Options</h3>
                <br />
                <ul>
                    <li>Options text</li>
                    <li>Options text 2</li>
                </ul>
            </div>
        </div>
        <div class="pure-u-1 pure-u-md-1-2">
            <div class="l-box">
                <h3 class="information-head">Help</h3>
                <br />
                <ul>
                    <li>Help text 1</li>
                    <li>Help text 2</li>
                </ul>
            </div>
        </div>
        <div class="pure-u-1 pure-u-md-1-2">
            <div class="l-box">
                <h3 class="information-head">Feel like quitting? Don't worry!</h3>
                <br />
                <ul>
                    <li>If you want to give up, you can stop your membership at any time</li>
                    <li>We're not forcing you</li>
                </ul>
            </div>
        </div>
    </div> <!-- end information -->
</div> <!-- end l-content -->
