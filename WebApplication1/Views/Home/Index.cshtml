@model WebApplication1.Models.Member
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Home Page";
}
<!--Import the necessary things-->
<!--Link to stylesheet-->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

<div class="banner">
    <h1 class="main-head">
        Home Page
    </h1>
</div>

<div class="information pure-g">
    <div class="information pure-g">
        <div class="pure-u-1 pure-u-md-1-2">
            <div class="card">
                <div class="container">
                    <h4><b>Instructions</b></h4>
                    <br />
                    <ul>
                        <li>Use the above links to create the account and sign in</li>
                        <li>Once you create an account, you will be able to log in</li>
                    </ul>
                </div>
            </div>
        </div>
    <br />
        <div class="pure-u-1 pure-u-md-1-2">
            <div class="card">
                <div class="container">
                    <h4><b>Payment Options</b></h4>
                    <br />
                    <ul>
                        <li>Pay by cash.</li>
                        <li>Card options also available.</li>
                    </ul>
                </div>
            </div>
        </div>
    <br />
        <div class="pure-u-1 pure-u-md-1-2">
            <div class="card">
                <div class="container">
                    <h4><b>Help</b></h4>
                    <br />
                    <ul>
                        <li>Our friendly team are here to assist you.</li>
                        <li>Feel free to ask us for help if you have any issues.</li>
                    </ul>
                </div>
            </div>
        </div>
    <br />
        <div class="pure-u-1 pure-u-md-1-2">
            <div class="card">
                <div class="container">
                    <h4><b>Feel like quiting? Don't worry</b></h4>
                    <br />
                    <ul>
                        <li>If you feel like quiting you can stop your membership at any time</li>
                        <li>We are not forcing you to join us.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div> <!-- end information -->
</div> <!-- end l-content -->
