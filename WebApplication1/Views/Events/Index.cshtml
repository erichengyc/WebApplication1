@model IEnumerable<WebApplication1.Models.Event>
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Index";
}


@ViewBag.Session


<h2 class="heading">All Events</h2>
<div class="pure-g">
    @if (Context.Session.GetString("RoleId") == "3" || Context.Session.GetString("RoleId") == "2")
    {

        <div class="pure-u-1 pure-u-md-1">
            <div class="card">
            <div class="container">
            <table class="pure-table pure-table-horizontal">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>@Html.DisplayNameFor(model => model.Date)</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>


                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>@Html.DisplayFor(modelItem => item.Date)</td>
                            <td>
                                <a class="button-success pure-button" asp-action="Details" asp-route-id="@item.EventId">View Event</a>

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            </div>
            </div>
        </div>
    }
    else if (Context.Session.GetString("RoleId") == "1")
    {

        <div class="pure-u-1 pure-u-md-1">

            <p>
                <a asp-action="Create">Create New</a>
            </p>
            <div class="card">
            <div class="container">
            <table class="pure-table pure-table-horizontal">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>@Html.DisplayNameFor(model => model.Date)</th>
                        <th></th>
                        <th>Modify</th>
                    </tr>
                </thead>

                <tbody>


                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>@Html.DisplayFor(modelItem => item.Date)</td>
                            <td>
                                <a class="button-success pure-button" asp-action="Details" asp-route-id="@item.EventId">View Event</a>

                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.EventId">Edit</a> |
                                <a asp-action="Delete" asp-route-id="@item.EventId">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            </div>
            </div>
        </div>

    }
</div>


